  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.42",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "typescript": "catalog:",
    "pkgroll": "^2.4.2",
    "tsx": "^4.16.5"
  }
