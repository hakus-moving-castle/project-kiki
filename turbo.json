{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist", ".next/**", "!.next/cache/**"]
		},

		"dev": {
			"dependsOn": ["^build"],
			"persistent": true,
			"cache": false
		},

		"test": {},
		"test:watch": {
			"cache": false,
			"persistent": true
		},

		"check-types": {
			"dependsOn": ["topo"]
		},

		"//#lint": {},
		"//#lint:fix": {
			"cache": false
		},

		"topo": {
			"dependsOn": ["^topo"]
		}
	}
}
